@page "/appointments/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Book Appointment</h3>
<hr />
<br />



<FormComponent ButtonText="Book Appointment" Appointment="appointment" OnValidSubmit="@CreateAppointment" />



@code {
    Appointment appointment = new Appointment();

    private async Task CreateAppointment()
    {
        await _client.PostAsJsonAsync("api/appointments", appointment);
        _navManager.NavigateTo("/appointments/");
    }
}
