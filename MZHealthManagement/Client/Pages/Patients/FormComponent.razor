<EditForm Model="@patient" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class=" form-group">
            <label>Name: </label>
            <div>
                <InputText @bind-Value="@patient.Name" class="form-control" />
                <ValidationMessage For="@(() => patient.Name)" />
            </div>
        </div>
    </fieldset>
    <fieldset disabled="@Disabled">
        <div class=" form-group">
            <label>Phone Number: </label>
            <div>
                <InputText @bind-Value="@patient.PhoneNo" class="form-control" />
                <ValidationMessage For="@(() => patient.PhoneNo)" />
            </div>
        </div>
    </fieldset>
    <fieldset disabled="@Disabled">
        <div class=" form-group">
            <label>Gender: </label>
            <div>
                <InputText @bind-Value="@patient.Gender" class="form-control" />
                <ValidationMessage For="@(() => patient.Gender)" />
            </div>
        </div>
    </fieldset>
    <fieldset disabled="@Disabled">
        <div class=" form-group">
            <label>Address: </label>
            <div>
                <InputText @bind-Value="@patient.Address" class="form-control" />
                <ValidationMessage For="@(() => patient.Address)" />
            </div>
        </div>
    </fieldset>
    <fieldset disabled="@Disabled">
        <div class=" form-group">
            <label>Weight: </label>
            <div>
                <InputNumber @bind-Value="@patient.Weight" class="form-control" />
                <ValidationMessage For="@(() => patient.Weight)" />
            </div>
        </div>
        </fieldset>
        @if (!Disabled)
        {
            <button type="submit" class="btn btn-success btn-block">
                @ButtonText
            </button>
        }
        <BackToList Target="patients" />
</EditForm>

@code {
  
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Patient patient { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
