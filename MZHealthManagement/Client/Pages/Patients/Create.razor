@page "/patients/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Register Patient</h3>
<hr />
<br />



<FormComponent ButtonText="Create Patient" patient="patient" OnValidSubmit="@CreatePatient" />



@code {
    Patient patient = new Patient();

    private async Task CreatePatient()
    {
        await _client.PostAsJsonAsync("api/patients", patient);
        _navManager.NavigateTo("/patients/");
    }
}
